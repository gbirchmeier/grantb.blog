<%
fields = [
  ["Headline",@post.headline],
  ["Nice URL", @post.nice_url],
  ["Published at",@post.published_at.to_s],
  ["Created at",@post.created_at.to_s],
  ["Updated at",@post.updated_at.to_s],
  ["Tags",@post.tags_as_string],
  ["Description",@post.description],
  ["Content",@post.content_as_html.html_safe],
]
%>


<div class="field_list">

<% fields.each{ |label,value| %>
  <div class="field">
    <div class="label"><%=label%></div>
    <div class="value"><%=nnne(value).html_safe%></div>
  </div>
<% } %>

</div>
