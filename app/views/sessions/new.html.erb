<% if @login_error %>
    <div id="login-error" class="alert alert-error">
      <%= @login_error %>
    </div>
<% end %>

<% if User.count==0 %>
    <div style="color: red; font-size: 16pt; margin-left: auto; margin-right: auto;">
      <strong>
<p>WARNING: This system has ZERO login accounts set up!</p>
<p>Somebody probably forgot to seed the database.</p>
      </strong>
    </div>
<% end %>


<div id="login-form-container">
<%= form_tag sessions_path, :class=>"form-horizontal" do %>

      <div class="control-group">
        <%= label_tag :username, "Username", :class=>"control-label" %>
        <div class="controls">
          <%= text_field_tag :username, params[:username], :maxlength => 25, :class => "userid" %>
        </div>
      </div>

      <div class="control-group">
        <%= label_tag :password, "Password", :class=>"control-label" %>
        <div class="controls">
          <%= password_field_tag :password, nil, :maxlength => 25, :class => "password" %>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <button type="submit" class="btn btn-primary btn-small">Submit</button>
        </div>
      </div>

<% end %>
</div>



  </div>
</div>

