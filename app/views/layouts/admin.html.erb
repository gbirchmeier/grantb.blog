<!DOCTYPE html>
<html>
<head>
<title>GrantB.net<%= "- #{@page_title}" if @page_title %></title>
<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
<%= csrf_meta_tags %>
</head>
<body class="adminbody">
<div class="content">

<h1><a href="/admin">GrantB.net Administration</a></h1>

<% if @current_user %>
	<div id="userbox">
		<div class="userline">Hello, <%=@current_user.username%></div>
		<div class="command"><%=link_to "Go back to public", root_path%></div>
		<div class="logout"><%=link_to "Log out", logout_path%></div>
	</div>
<% end %>


<% flash.each do |k, v| %>
	<% alert_class = (k == :error ? "alert alert-error" : "alert") %>
	<div class="<%= alert_class %>" id="<%= k %>"><%= v %></div>
<% end %>


<div class="main">
<%= yield %>
</div><!--main-->



</div><!-- content -->
</body>
</html>
