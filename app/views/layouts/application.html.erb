<!DOCTYPE html>
<html>
<head>
<title>GrantB.net<%= "- #{@page_title}" if @page_title %></title>
<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
<%= csrf_meta_tags %>
</head>
<body id="blogbody">
<div class="content">

<% if @current_user %>
	<div id="userbox">
		Hello, <%=@current_user.username%><br/>
		<ul>
		<li><%=link_to "Admin menu", admin_path %></li>
		</ul>
		<div class="logout"><%=link_to "Log out", logout_path%></div>
	</div>
<% end %>

<% flash.each do |k, v| %>
	<% alert_class = (k == :error ? "alert alert-error" : "alert") %>
	<div class="<%= alert_class %>" id="<%= k %>"><%= v %></div>
<% end %>


<div class="main_wrap">
<div class="main">
<%= yield %>
</div></div><!--main-->


<div class="sidebar_wrap">
<div class="sidebar">
poop
</div></div><!--sidebar-->




</div><!-- site_content -->
</body>
</html>
