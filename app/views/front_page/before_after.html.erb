<div class="front-page">

<% if @posts.count==0 %>
  <div id="no_posts">No posts.</div>
<% else %>


  <div id="time-header">
    <h1>Older Posts</h1>
    <div class="fromto">
      <%=numeric_date_and_time(@posts.first.published_at)%>
      to
      <%=numeric_date_and_time(@posts.last.published_at)%>
    </div>
    <div class="links">
      <%-if @newer_time %>
        <div class="link"><a href="/after/<%=@newer_time%>">&lt; Newer</a></div>
      <%-end %>
      <%-if @older_time %>
        <div class="link"><a href="/before/<%=@older_time%>">Older &gt;</a></div>
      <%-end %>
    </div>
  </div>


<% @posts.each{|p| %>
   <% @post = p %>
   <%=render 'shared/post'%>
<% } %>


<%=render 'time_footer'%>


<% end %>
</div>
